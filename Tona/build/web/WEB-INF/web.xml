<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>Servlets.LogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListaProducto</servlet-name>
        <servlet-class>Servlets.ListaProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerImagen</servlet-name>
        <servlet-class>Servlets.ObtenerImagen</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarProducto</servlet-name>
        <servlet-class>Servlets.EliminarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarProductoCod</servlet-name>
        <servlet-class>Servlets.BuscarProductoCod</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>obtenerCampana</servlet-name>
        <servlet-class>Servlets.obtenerCampana</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarProducto</servlet-name>
        <servlet-class>Servlets.ActualizarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerProductoGaleria</servlet-name>
        <servlet-class>Servlets.ObtenerProductoGaleria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerImagenGaleriaInvierno</servlet-name>
        <servlet-class>Servlets.ObtenerImagenGaleriaInvierno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerProductoInvierno</servlet-name>
        <servlet-class>Servlets.ObtenerProductoInvierno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerProductoPrimaVerano</servlet-name>
        <servlet-class>Servlets.ObtenerProductoPrimaVerano</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ObtenerImagenGaleriaPrimaVerano</servlet-name>
        <servlet-class>Servlets.ObtenerImagenGaleriaPrimaVerano</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IniciarSesion</servlet-name>
        <servlet-class>Servlets.IniciarSesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.htm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListaProducto</servlet-name>
        <url-pattern>/ListaProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerImagen</servlet-name>
        <url-pattern>/ObtenerImagen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarProducto</servlet-name>
        <url-pattern>/EliminarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarProductoCod</servlet-name>
        <url-pattern>/BuscarProductoCod</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>obtenerCampana</servlet-name>
        <url-pattern>/obtenerCampana</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarProducto</servlet-name>
        <url-pattern>/ActualizarProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerProductoGaleria</servlet-name>
        <url-pattern>/ObtenerProductoGaleria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerImagenGaleriaInvierno</servlet-name>
        <url-pattern>/ObtenerImagenGaleriaInvierno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerProductoInvierno</servlet-name>
        <url-pattern>/ObtenerProductoInvierno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerProductoPrimaVerano</servlet-name>
        <url-pattern>/ObtenerProductoPrimaVerano</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ObtenerImagenGaleriaPrimaVerano</servlet-name>
        <url-pattern>/ObtenerImagenGaleriaPrimaVerano</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IniciarSesion</servlet-name>
        <url-pattern>/IniciarSesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            10
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
    <!--SMTP Settings-->
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.live.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>25</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>34885949*feli</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>gustifeli@hotmail.com</param-value>
    </context-param>
</web-app>
